@model MicroondasMVC.Models.Aquecimento
@{
    ViewData["Title"] = "Inicio Rapido";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="InicioRapido">
            <div class="form-group">
                <label asp-for="Alimento" class="control-label"></label>
                <input asp-for="Alimento" class="form-control" />
                <span asp-validation-for="Alimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aquecer" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" >Voltar</a>
</div>