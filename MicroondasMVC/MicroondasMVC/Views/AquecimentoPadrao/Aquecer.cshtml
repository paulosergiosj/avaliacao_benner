@{
    ViewData["Title"] = "Aquecer";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Aquecer" method="post">
            <div class="form-group">
                <label>Digite o Alimento: </label>
                <br />
                <input type="text" name="alimento" class="form-control" />
                <input type="hidden" name="id" class="text-danger" value="@ViewData["id"]" />
            </div>
            <div class="form-group">
                <input type="submit" value="Aquecer" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Voltar</a>
</div>